# Ignore all log files:
/log/*

# Ignore database configuration:
/config/database.yml

# Ignore system and temp files:
/tmp
/storage/*
!/storage/.keep
/public/assets

# Ignore specific environment configuration files:
/config/credentials.yml.enc
/config/master.key

