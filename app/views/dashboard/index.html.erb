<div class="flex-1 overflow-auto">
  <div class="container mx-auto p-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="bg-white shadow rounded-lg p-4">
        <h2 class="text-lg font-bold text-gray-800 mb-4">Ostatnia wiadomość:</h2>
        <% if @last_messages.present? %>
          <% @last_messages.each do |message| %>
            <div class="mb-2">
              <p class="text-gray-600">
                <%= link_to message.body.truncate(50), conversation_message_path(message.conversation, message), class: 'text-blue-600 hover:text-blue-900' %>
              </p>
              <p class="text-gray-500 text-sm"><%= I18n.l(message.created_at, format: :long) %></p>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500">Brak wiadomości.</p>
        <% end %>
      </div>

      <div class="bg-white shadow rounded-lg p-4">
        <h2 class="text-lg font-bold text-gray-800 mb-4">Twoje zlecenia:</h2>
        <% if @visible_bookings.present? %>
          <% @visible_bookings.each do |booking| %>
            <div class="mb-2">
              <p class="text-gray-600">
                <%= link_to booking.post.title, booking_path(booking), class: 'text-blue-600 hover:text-blue-900' %> - <%= booking.status %>
              </p>
              <p class="text-gray-500 text-sm"><%= I18n.l(booking.start_date, format: :long) %> - <%= I18n.l(booking.end_date, format: :long) %></p>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500">Brak zleceń.</p>
        <% end %>
      </div>
    </div>

    <div class="mt-4 grid grid-cols-1 md:grid-cols-2">
      <div class="bg-white shadow rounded-lg p-4 col-span-1 md:col-span-1">
        <h2 class="text-lg font-bold text-gray-800 mb-4">Powiadomienia:</h2>
        <% if @notifications.present? %>
          <% @notifications.each do |notification| %>
            <div id="notification_<%= notification.id %>" class="mb-2 flex justify-between items-center">
              <p class="text-gray-600">
                <% if notification.action == 'sent you a request for' %>
                  <%= link_to "#{notification.actor.first_name} wysłał Ci ofertę", notification_path(notification), class: 'text-blue-600 hover:text-blue-900' %>
                <% elsif notification.action == 'request accepted' %>
                  <%= link_to "#{notification.actor.first_name} zaakceptował twoją ofertę", notification_path(notification), class: 'text-blue-600 hover:text-blue-900' %>
                <% elsif notification.action == 'request rejected' %>
                  <%= link_to "#{notification.actor.first_name} odrzucił twoją ofertę", notification_path(notification), class: 'text-blue-600 hover:text-blue-900' %>
                <% elsif notification.action == 'sent you a negotiation request' %>
                  <%= link_to "#{notification.actor.first_name} wysłał Ci propozycję negocjacji", notification_path(notification), class: 'text-blue-600 hover:text-blue-900' %>
                <% end %>
              </p>
              <%= button_to "X", notification_path(notification), method: :delete, data: { turbo_stream: true, confirm: "Jesteś pewien?" }, class: "text-red-600 hover:text-red-900" %>
            </div>
          <% end %>
          <%= link_to "Zobacz wszystkie powiadomienia", notifications_path, class: 'text-blue-600 hover:text-blue-900' %>
        <% else %>
          <p class="text-gray-500">Brak powiadomień.</p>
        <% end %>
      </div>
    </div>

    <div class="mt-4 grid grid-cols-1">
      <div class="bg-white shadow rounded-lg p-4">
        <h2 class="text-lg font-bold text-gray-800 mb-4">Statystyki Rezerwacji</h2>
        <div id="chart-container" class="relative">
          <canvas id="bookingChart" class="w-full h-32 md:h-48"></canvas>
          <div id="loading-spinner" class="absolute inset-0 flex items-center justify-center"></div>
        </div>
        <div class="mt-4">
          <p class="text-gray-600">W tym miesiącu: <%= @current_month_bookings %></p>
          <p class="text-gray-600">W poprzednim miesiącu: <%= @previous_month_bookings %></p>
          <p class="text-gray-600">Postęp: <span style="color: <%= @booking_progress >= 0 ? 'green' : 'red' %>;">
            <%= @booking_progress.round(2) %>%</span>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('turbo:load', function () {
  // Check if the chart container exists before proceeding
  var chartContainer = document.getElementById('chart-container');
  if (chartContainer) {
    // Destroy existing chart instance if it exists
    if (window.bookingChart instanceof Chart) {
      window.bookingChart.destroy();
    }

    // Show the loading spinner if it exists
    var loadingSpinner = document.getElementById('loading-spinner');
    if (loadingSpinner) {
      loadingSpinner.classList.add('flex', 'items-center', 'justify-center');

      // Check if the loader already exists before creating a new one
      if (!loadingSpinner.querySelector('.loader')) {
        // Create and style loader
        var loader = document.createElement('div');
        loader.classList.add('loader', 'border-4', 'border-gray-200', 'border-solid', 'border-l-blue-600', 'w-9', 'h-9', 'rounded-full', 'animate-spin');
        loadingSpinner.appendChild(loader);
      }

      loadingSpinner.style.display = 'flex';
    }

    var ctx = document.getElementById('bookingChart').getContext('2d');
    window.bookingChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Wszystkie zlecenia', 'Zakończone zlecenia', 'Oczekujące zlecenia'],
        datasets: [{
          label: 'Zlecenia',
          data: [<%= @all_bookings %>, <%= @completed_bookings %>, <%= @pending_bookings %>],
          backgroundColor: ['rgba(76, 175, 80, 0.5)', 'rgba(255, 152, 0, 0.5)', 'rgba(244, 67, 54, 0.5)'],
          borderColor: ['rgba(76, 175, 80, 1)', 'rgba(255, 152, 0, 1)', 'rgba(244, 67, 54, 1)'],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        indexAxis: window.innerWidth < 768 ? 'y' : 'x', // Use horizontal layout on mobile
        scales: {
          y: {
            beginAtZero: true
          }
        },
        animation: {
          onComplete: function () {
            // Hide the loading spinner once the chart animation is complete
            if (loadingSpinner) {
              loadingSpinner.style.display = 'none';
            }
          }
        }
      }
    });
  }
});
</script>
