<div class="min-h-screen bg-gray-100 text-gray-900 flex justify-center items-center">
  <div class="max-w-screen-xl m-0 sm:m-10 bg-white shadow sm:rounded-lg flex justify-center flex-1">
    <div class="w-full lg:w-1/2 xl:w-5/12 p-6 sm:p-12">
      <div class="mt-12 flex flex-col items-center">
        <div class="w-full flex-1 mt-8">
          <div class="my-12 border-b text-center">
            <div
              class="leading-none px-2 inline-block text-sm text-gray-600 tracking-wide font-medium bg-white transform translate-y-1/2">
              Wyślij ponownie instrukcje potwierdzenia
            </div>
          </div>

          <div class="mx-auto max-w-xs">
            <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { class: 'w-full max-w-xs', method: :post }) do |f| %>
              <div class="mb-4">
                <h2 class="text-2xl font-bold text-center text-gray-800">Potwierdzenie email</h2>
              </div>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="mb-4">
                <%= f.label :email, 'Adres e-mail', class: 'block text-gray-700 text-sm font-bold mb-2' %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
              </div>
              <div class="flex items-center justify-between">
                <%= f.submit "Wyślij ponownie instrukcje", class: 'bg-worxyYellow hover:bg-yellow-700 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
              </div>
            <% end %>
            <p class="text-center text-gray-500 text-xs mt-4">©2024 Worxy. Wszelkie prawa zastrzeżone.</p>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
    <div class="w-full lg:flex-1 text-center hidden lg:flex" style="background-image: url('<%= asset_path 'login-panel-background.jpg' %>'); background-size: cover; background-position: center;">
    </div>
  </div>
</div>
