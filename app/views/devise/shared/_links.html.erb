<%- if controller_name != 'sessions' %>
  <%= link_to t('shared.links.sign_in'), new_session_path(resource_name), class: 'text-sm font-semibold text-yellow-500 hover:text-yellow-700 transition-all duration-300 ease-in-out focus:outline-none mb-2' %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('shared.links.sign_up'), new_registration_path(resource_name), class: 'text-sm font-semibold text-yellow-500 hover:text-yellow-700 transition-all duration-300 ease-in-out focus:outline-none mb-2' %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('shared.links.forgot_password'), new_password_path(resource_name), class: 'text-sm font-semibold text-yellow-500 hover:text-yellow-700 transition-all duration-300 ease-in-out focus:outline-none mb-2' %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('shared.links.confirmation'), new_confirmation_path(resource_name), class: 'text-sm font-semibold text-yellow-500 hover:text-yellow-700 transition-all duration-300 ease-in-out focus:outline-none mb-2' %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('shared.links.unlock'), new_unlock_path(resource_name), class: 'text-sm font-semibold text-yellow-500 hover:text-yellow-700 transition-all duration-300 ease-in-out focus:outline-none mb-2' %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to t('shared.links.sign_in_through', provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: 'text-sm font-semibold text-yellow-500 hover:text-yellow-700 transition-all duration-300 ease-in-out focus:outline-none mb-2' %><br />
  <% end %>
<% end %>
