<div class="min-h-screen bg-gray-100 text-gray-900 flex justify-center items-center">
  <div class="max-w-screen-xl m-0 sm:m-10 bg-white shadow sm:rounded-lg flex justify-center flex-1">
    <div class="w-full lg:w-1/2 xl:w-5/12 p-6 sm:p-12">
      <div class="mt-12 flex flex-col items-center">
        <div class="w-full flex-1 mt-8">
          <!-- Header above the login form -->
          <div class="my-12 border-b text-center">
            <div
              class="leading-none px-2 inline-block text-sm text-gray-600 tracking-wide font-medium bg-white transform translate-y-1/2"
            >
              <%= t('devise.sessions.login_via_email') %>
            </div>
          </div>

          <div class="mx-auto max-w-xs">
            <%= form_for(
                  resource,
                  as: resource_name,
                  url: session_path(resource_name),
                  html: { class: 'w-full max-w-xs' }
              ) do |f|
            %>
              <div class="mb-4">
                <h2 class="text-2xl font-bold text-center text-gray-800">
                  <%= t('devise.sessions.sign_in_header') %>
                </h2>
              </div>

              <% if flash[:alert] %>
                <div class="mb-4 text-red-500">
                  <ul>
                    <li><%= flash[:alert] %></li>
                  </ul>
                </div>
              <% end %>

              <!-- Email Field -->
              <div class="mb-4">
                <%= f.label :email,
                    t('devise.sessions.fields.email'),
                    class: 'block text-gray-700 text-sm font-bold mb-2'
                %>
                <%= f.email_field :email,
                    class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
                %>
              </div>

              <!-- Password Field -->
              <div class="mb-6">
                <%= f.label :password,
                    t('devise.sessions.fields.password'),
                    class: 'block text-gray-700 text-sm font-bold mb-2'
                %>
                <%= f.password_field :password,
                    class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline',
                    placeholder: t('devise.sessions.fields.password_placeholder')
                %>
              </div>

              <!-- Submit -->
              <div class="flex items-center justify-between">
                <%= f.submit t('devise.sessions.sign_in_button'),
                    class: 'bg-worxyYellow hover:bg-yellow-700 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline'
                %>
              </div>
            <% end %>

            <p class="text-center text-gray-500 text-xs mt-4">
              <%= t('devise.sessions.copyright') %>
            </p>

            <p class="text-center text-gray-500 text-xs mt-6">
              <%= t('devise.sessions.no_account') %>
            </p>

            <!-- Devise shared links: sign up, forgot password, etc. -->
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Background image on the right (desktop only) -->
    <div
      class="w-full lg:flex-1 text-center hidden lg:flex"
      style="background-image: url('<%= asset_path 'login-panel-background.jpg' %>'); background-size: cover; background-position: center;"
    >
    </div>
  </div>
</div>
