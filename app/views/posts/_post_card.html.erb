<div class="bg-white shadow-lg rounded-lg overflow-hidden flex flex-col md:flex-row <%= 'border-4 border-yellow-300' if post.user == current_user %> relative">
  <% if post.availability == 'high_priority' %>
    <div class="absolute top-0 left-0 bg-red-500 text-white text-base font-bold py-2 px-4 rounded-br-lg flex items-center space-x-2 z-10">
      <img src="<%= asset_path('icons/flame-svgrepo-com.svg') %>" class="h-6 w-6 animate-bounce" alt="Flame Icon">
      <span>Wysoki priorytet</span>
    </div>
  <% end %>

  <!-- Image Section (Left) -->
  <% if post.images.attached? %>
    <div class="w-full md:w-1/3 p-4">
      <div class="border border-gray-300 rounded-lg overflow-hidden">
        <%= image_tag post.images.first.variant(resize_to_fill: [600, 400]), class: 'object-cover w-full h-full' %>
      </div>
    </div>
  <% end %>

  <!-- Content Section (Right) -->
  <div class="flex-1 p-6 pt-10 relative">
    <!-- Location and Icon -->
    <div class="absolute top-0 right-0 bg-gray-100 text-gray-700 text-sm font-semibold py-1 px-3 rounded-bl-lg flex items-center space-x-1 z-10">
      <i class="fa fa-map-marker-alt"></i>
      <span><%= post.address %></span>
    </div>

    <!-- Title -->
    <h2 class="text-2xl font-semibold mb-4 mt-6 md:mt-0"><%= post.title %></h2>

    <!-- Description with more characters -->
    <p class="text-gray-700 mb-6"><%= truncate(post.description, length: 150) %>...</p>

    <!-- Category and Price Section -->
    <div class="text-sm text-gray-500 mb-6 flex flex-col space-y-2 md:flex-row md:justify-between md:items-center">
      <div>
        <p class="font-semibold">Kategoria: <span class="font-normal"><%= post.category.name %></span></p>
        <p class="font-semibold">Podkategoria: <span class="font-normal"><%= post.subcategory.name %></span></p>
      </div>
      <div>
        <p class="font-semibold">Budżet: <span class="font-normal text-xl text-black"><%= post.price %>zł</span></p>
      </div>
    </div>

    <!-- Separator -->
    <hr class="my-4 border-t border-gray-300">

    <!-- Date and Button Section -->
    <div class="flex justify-between items-center">
      <div class="text-sm text-gray-500">
        <p>Utworzono: <%= I18n.l(post.created_at, format: :long) %></p>
      </div>
      <%= link_to 'Otwórz', post_path(post), class: 'inline-block bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded', data: { turbo: "true" } %>
    </div>
  </div>
</div>
