<div class="bg-white shadow-lg rounded-lg overflow-hidden flex <%= 'border-4 border-yellow-300' if post.user == current_user %>">
  <div class="flex-1 p-6">
    <h2 class="text-2xl font-semibold mb-4"><%= post.title %></h2>
    <p class="text-gray-700 mb-6"><%= truncate(post.description, length: 150) %></p>
    <div class="text-sm text-gray-500 mb-6">
      <p>Kategoria: <%= post.category.name %></p>
      <p>Cena: <%= post.price %>zł</p>
      <p>Adres: <%= post.address %></p>
      <p>Utworzono: <%= I18n.l(post.created_at, format: :long) %></p>
    </div>
    <%= link_to 'Zobacz ogłoszenie', post_path(post), class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded', data: { turbo: "true" } %>
  </div>
  <% if post.images.attached? %>
    <div class="w-1/3 p-4">
      <div class="border border-gray-300 rounded-lg overflow-hidden">
        <%= image_tag post.images.first.variant(resize_to_fill: [400, 300]), class: 'object-cover w-full h-full' %>
      </div>
    </div>
  <% end %>
</div>
