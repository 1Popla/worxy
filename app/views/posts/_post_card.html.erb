<div class="bg-white shadow-lg rounded-lg overflow-hidden">
  <% if post.images.attached? %>
    <%= image_tag post.images.first.variant(resize_to_fill: [1200, 400]), class: 'w-full h-64 object-cover' %>
  <% end %>
  <div class="p-6">
    <h2 class="text-2xl font-semibold mb-4"><%= post.title %></h2>
    <p class="text-gray-700 mb-6"><%= truncate(post.description, length: 150) %></p>
    <div class="text-sm text-gray-500 mb-6">
      <p>Category: <%= post.category.name %></p>
      <p>Price: $<%= post.price %></p>
      <p>Location: <%= post.address %></p>
      <p>Created at: <%= post.created_at.strftime("%B %e, %Y %H:%M") %></p>
      <p>Last updated: <%= post.updated_at.strftime("%B %e, %Y %H:%M") %></p>
    </div>
    <%= link_to 'Zobacz ogÅ‚oszenie', post_path(post), class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>
