<div class="flex-1 overflow-auto">
  <div class="container mx-auto p-4 bg-gray-100">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
      <div class="lg:col-span-2 bg-white shadow rounded-lg p-4">
        <% if @post.images.attached? %>
          <div class="mb-4 border-2 border-gray-300 shadow-lg rounded p-2">
            <div id="main-image-container" class="mb-4 cursor-pointer w-full h-64 md:h-96 flex items-center justify-center border-b-2 border-gray-300 pb-2 rounded">
              <%= image_tag @post.images.first.variant(resize_to_fill: [600, 400]).processed, id: "main-image", class: "object-contain max-w-full max-h-full rounded", data: { full_url: url_for(@post.images.first) } %>
            </div>
            <div class="relative">
              <button id="scroll-left" class="absolute left-0 top-1/2 transform -translate-y-1/2 bg-gray-200 p-2 rounded-full shadow-md">
                &lt;
              </button>
              <button id="scroll-right" class="absolute right-0 top-1/2 transform -translate-y-1/2 bg-gray-200 p-2 rounded-full shadow-md">
                &gt;
              </button>
              <div id="thumbnails" class="flex space-x-2 overflow-x-auto">
                <% @post.images.each_with_index do |image, index| %>
                  <div class="flex-shrink-0 w-20 h-20 md:w-24 md:h-24 overflow-hidden flex items-center justify-center border-2 border-gray-300 rounded-lg shadow-sm">
                    <%= image_tag image.variant(resize_to_fill: [100, 100]).processed, class: "thumbnail cursor-pointer object-cover w-full h-full rounded", data: { index: index, full_url: url_for(image) } %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        <div>
          <p class="font-semibold text-gray-700">Opis:</p>
          <p class="text-gray-700 text-base mb-4 break-words"><%= simple_format(@post.description) %></p>
        </div>
      </div>
      <div class="lg:col-span-1">
        <div class="bg-white shadow rounded-lg p-6 mb-6">
          <h2 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
            <span class="bg-blue-200 px-3 py-1 rounded-full flex items-center">
              <i class="fas fa-user mr-2"></i>
              Zleceniodawca
            </span>
          </h2>
          <div class="flex justify-center mb-4 relative">
            <div class="w-24 h-24 bg-gray-300 rounded-full mb-4"></div>
            <% if user_signed_in? && current_user != @post.user %>
              <%= button_to 'Wyślij wiadomość', conversations_path(conversation: { recipient_id: @post.user.id }), method: :post, class: 'absolute top-0 right-0 bg-yellow-300 hover:bg-yellow-500 text-gray-800 font-bold py-1 px-2 rounded-full mb-2 md:mb-0 text-sm' %>
            <% end %>
          </div>
          <p class="font-semibold text-gray-700">Imię: <%= @post.user.first_name %></p>
          <% if user_signed_in? %>
            <p class="font-semibold text-gray-700">Numer telefonu: <%= @post.user.phone_number %></p>
          <% else %>
            <p class="font-semibold text-gray-700">Numer telefonu: <%= link_to 'Zaloguj się, aby zobaczyć', new_user_session_path, class: 'text-blue-500' %></p>
          <% end %>
          <%= link_to 'Zobacz profil', user_path(@post.user), class: 'bg-yellow-300 hover:bg-yellow-500 text-gray-800 font-bold py-2 px-4 rounded mt-4 inline-block' %>
        </div>
        <div class="bg-white shadow rounded-lg p-6">
          <h2 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
            <span class="bg-blue-200 px-3 py-1 rounded-full flex items-center">
              <i class="fas fa-info-circle mr-2"></i>
              Szczegóły
            </span>
          </h2>
          <div class="mb-4">
            <p class="font-semibold text-gray-700">Cena:</p>
            <p class="text-gray-700 text-base"><%= number_to_currency(@post.price) %></p>
          </div>
          <div class="mb-4">
            <p class="font-semibold text-gray-700">Kategoria:</p>
            <p class="text-gray-700 text-base"><%= @post.category.name %></p>
          </div>
          <div class="mb-4">
            <p class="font-semibold text-gray-700">Priorytet:</p>
            <p class="text-gray-700 text-base"><%= @post.availability %></p>
          </div>
          <div class="mb-4">
            <p class="font-semibold text-gray-700">Kontakt:</p>
            <p class="text-gray-700 text-base"><%= @post.contact_information %></p>
          </div>
          <div class="mb-4">
            <p class="font-semibold text-gray-700">Adres:</p>
            <p class="text-gray-700 text-base">
              <%= @post.street %>, <%= @post.city %>, <%= @post.state %>, <%= @post.country %>
            </p>
          </div>
          <div class="text-sm text-gray-500">
            <p>Utworzono: <%= I18n.l(@post.created_at, format: :long) %></p>
            <p>Ostatnia aktualizacja: <%= I18n.l(@post.updated_at, format: :long) %></p>
          </div>
        </div>
        <div class="bg-white shadow rounded-lg p-6 mt-6">
          <h2 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
            <span class="bg-purple-200 px-3 py-1 rounded-full flex items-center">
              <i class="fas fa-map-marker-alt mr-2"></i>
              Lokalizacja zlecenia
            </span>
          </h2>
          <div id="showMap" data-lat="<%= @post.latitude %>" data-lng="<%= @post.longitude %>" class="w-full h-64 lg:h-64 rounded-lg border"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="lightbox" class="fixed inset-0 bg-black bg-opacity-75 flex flex-col items-center justify-center hidden">
  <div class="relative w-full h-full max-w-screen-lg max-h-screen flex items-center justify-center">
    <button id="close-lightbox" class="absolute top-[20vh] lg:top-4 right-4 text-white text-2xl">×</button>
    <button id="prev-image" class="absolute left-4 text-white text-2xl px-2 bg-black bg-opacity-50 rounded-full">‹</button>
    <img id="lightbox-image" class="object-contain max-w-full max-h-[calc(100vh-15rem)]" src="" alt="Image" />
    <button id="next-image" class="absolute right-4 text-white text-2xl px-2 bg-black bg-opacity-50 rounded-full">›</button>
  </div>
  <div id="lightbox-thumbnails" class="flex justify-center space-x-2 p-4 mt-2"></div>
</div>

<div id="request-modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
  <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-md">
    <h2 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
      <span class="bg-yellow-200 px-3 py-1 rounded-full flex items-center">
        <i class="fas fa-envelope mr-2"></i>
        Wyślij ofertę
      </span>
    </h2>
    <%= form_with(url: send_request_post_path(@post), method: :post, local: true, html: { id: "send-request-form" }) do |f| %>
      <div class="mb-4">
        <%= f.label :message, "Wiadomość", class: "block text-gray-700 font-bold mb-2" %>
        <%= f.text_area :message, rows: 4, class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500", placeholder: "Wpisz swoją wiadomość..." %>
      </div>
      <div class="mb-4">
        <%= f.label :price_offer, "Proponowana cena", class: "block text-gray-700 font-bold mb-2" %>
        <%= f.text_field :price_offer, class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500", placeholder: "Wpisz proponowaną cenę..." %>
      </div>
      <div class="mb-4">
        <%= f.label :start_date_offer, "Proponowana data rozpoczęcia", class: "block text-gray-700 font-bold mb-2" %>
        <%= f.date_field :start_date_offer, class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500", placeholder: "Wybierz datę rozpoczęcia..." %>
      </div>
      <div class="flex justify-end">
        <button type="button" id="cancel-modal" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded mr-2">Anuluj</button>
        <%= f.submit "Wyślij ofertę", class: "bg-yellow-300 hover:bg-yellow-500 text-gray-800 font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>

<script>
 document.addEventListener('turbo:load', function () {
  const thumbnails = document.getElementById('thumbnails');
  const scrollLeftButton = document.getElementById('scroll-left');
  const scrollRightButton = document.getElementById('scroll-right');

  if (thumbnails && scrollLeftButton && scrollRightButton) {
    scrollLeftButton.addEventListener('click', function () {
      thumbnails.scrollBy({
        left: -100,
        behavior: 'smooth'
      });
    });

    scrollRightButton.addEventListener('click', function () {
      thumbnails.scrollBy({
        left: 100,
        behavior: 'smooth'
      });
    });

    const updateArrowsVisibility = () => {
      if (thumbnails.scrollWidth > thumbnails.clientWidth) {
        scrollLeftButton.style.display = 'block';
        scrollRightButton.style.display = 'block';
      } else {
        scrollLeftButton.style.display = 'none';
        scrollRightButton.style.display = 'none';
      }
    };

    window.addEventListener('resize', updateArrowsVisibility);
    updateArrowsVisibility();
  } else {
    console.error('One or more elements not found:', {
      thumbnails,
      scrollLeftButton,
      scrollRightButton
    });
  }
});

</script>
