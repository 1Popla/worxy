  <div class="flex-1 overflow-auto">
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold mb-4">Moje ogłoszenia</h1>
      <% if @user_posts.present? %>
        <div class="flex flex-col space-y-4">
          <% @user_posts.order(created_at: :desc).each do |post| %>
            <div class="w-full">
              <%= render partial: 'posts/post_card', locals: { post: post } %>
            </div>
          <% end %>
        </div>
        <div class="mt-6">
          <%= paginate @user_posts %>
        </div>
      <% else %>
        <div class="w-full text-center">
          <p>Nie posiadasz ogłoszeń.</p>
        </div>
      <% end %>
    </div>
  </div>
