<div class="flex h-screen bg-gray-100 overflow-hidden">
  <%= render 'shared/dashboard/sidebar' %>

  <div class="flex-1 overflow-auto">
    <div class="container mx-auto p-4">
      <div class="flex justify-between items-center">
        <h1 class="text-xl font-bold text-gray-800">Profile</h1>
        <% if @user == current_user %>
          <%= link_to 'Edytuj profil', edit_user_registration_path, class: 'text-blue-600 hover:text-blue-800 font-semibold' %>
        <% end %>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="bg-white shadow rounded-lg p-4">
          <h2 class="text-lg font-bold text-gray-800 mb-4">Dane użytkownika</h2>
          <div class="mb-4">
            <p class="font-semibold text-gray-700">Email: <%= @user.email %></p>
          </div>
          <div class="mb-4">
            <p class="font-semibold text-gray-700">Rola: <%= @user.role.capitalize %></p>
          </div>
          <div class="mb-4">
            <p class="font-semibold text-gray-700">Account Created: <%= @user.created_at.strftime("%B %e, %Y") %></p>
          </div>
          <div class="mb-4">
            <p class="font-semibold text-gray-700">Last Updated: <%= @user.updated_at.strftime("%B %e, %Y") %></p>
          </div>
        </div>

        <div class="bg-white shadow rounded-lg p-4">
          <h2 class="text-lg font-bold text-gray-800 mb-4">Opis użytkownika</h2>
          <p class="text-gray-500">Further user details can be added here or more sections as required.</p>
        </div>
      </div>

      <div class="mt-4 grid grid-cols-1">
        <div class="bg-white shadow rounded-lg p-4">
          <h2 class="text-lg font-bold text-gray-800 mb-4">Komentarze/portfolio</h2>
          <p class="text-gray-500">Display user-related activities or statistics here.</p>
        </div>
      </div>
    </div>
  </div>
</div>
