<div class="container mx-auto p-4">
  <div class="bg-white shadow rounded-lg p-4">
    <h2 class="text-lg font-bold text-gray-800 mb-4">Wszystkie Powiadomienia</h2>
    <% if @notifications.present? %>
      <% @notifications.each do |notification| %>
        <div class="mb-2">
          <p class="text-gray-600">
            <%= link_to "Notification from #{notification.actor.email} regarding #{notification.notifiable.title}", notification_path(notification), class: 'text-blue-600 hover:text-blue-900' %>
          </p>
          <p class="text-gray-500 text-sm"><%= notification.created_at.strftime("%b %d, %Y %H:%M") %></p>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-500">Brak powiadomie≈Ñ.</p>
    <% end %>
  </div>
</div>
