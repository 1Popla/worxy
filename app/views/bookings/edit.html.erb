<div class="flex-1 overflow-auto">
  <div class="container mx-auto px-4 py-8 max-w-3xl">
    <div class="bg-white border border-gray-200 shadow-lg rounded-lg p-8 relative">
      <h1 class="text-3xl font-semibold text-gray-800 mb-6 border-b pb-4 text-center">
        Edytuj Rezerwację
      </h1>

      <%= form_for @booking do |f| %>
        <%= render 'form', booking: @booking, f: f %>

        <div class="mt-8 flex justify-center space-x-4">
          <%= link_to 'Wróć', bookings_path, class: 'inline-block bg-gray-600 hover:bg-gray-800 text-white font-bold py-2 px-4 rounded transition-colors duration-200' %>
          <%= f.submit 'Zapisz', class: 'bg-worxyYellow text-black font-bold py-2 px-4 rounded hover:opacity-90 transition-colors duration-200' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
