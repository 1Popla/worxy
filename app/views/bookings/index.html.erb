<div class="flex-1 overflow-auto">
  <div class="container mx-auto px-4 py-8">
    <h2 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
      <span class="bg-blue-200 px-3 py-1 rounded-full flex items-center">
        <i class="fas fa-briefcase mr-2"></i>
        Zlecenia
      </span>
    </h2>
    <%= link_to 'Zobacz Kalendarz', calendar_bookings_path, class: 'mt-4 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-black bg-yellow-300 hover:bg-yellow-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500' %>
    <div class="overflow-x-auto mt-4">
      <div class="block md:hidden">
        <% @bookings.each do |booking| %>
          <div class="bg-white shadow-md rounded-lg mb-4 p-4">
            <div class="mb-4">
              <div class="bg-gray-100 p-2 rounded-lg shadow-inner">
                <span class="block font-medium text-gray-500">Nazwa</span>
                <span class="font-medium text-gray-800"><%= booking.post.title %></span>
              </div>
            </div>
            <div class="mb-4">
              <div class="bg-gray-100 p-2 rounded-lg shadow-inner">
                <span class="block font-medium text-gray-500">Status</span>
                <span class="text-gray-600"><%= human_enum_name('booking.statuses', booking.status) %></span>
              </div>
            </div>
            <div class="flex justify-between items-center">
              <%= link_to 'Pokaż', booking, class: 'text-blue-600 hover:text-blue-900' %>
              <%= link_to 'Edytuj', edit_booking_path(booking), class: 'text-blue-600 hover:text-blue-900' %>
              <%= link_to 'Usuń', booking, data: { turbo_method: :delete, turbo_confirm: "Czy jesteś pewien?" }, class: 'text-red-600 hover:text-red-900' %>
            </div>
          </div>
        <% end %>
      </div>

      <table class="hidden md:table min-w-full bg-white shadow-md rounded-lg overflow-hidden">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Usługa</th>
            <th scope="col" class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th scope="col" class="py-3 px-6 text-center text-xs font-medium text-gray-500 uppercase tracking-wider" colspan="3">Akcje</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @bookings.each do |booking| %>
            <tr id="<%= dom_id(booking) %>" class="hover:bg-gray-50 transition-colors">
              <td class="py-4 px-6 whitespace-nowrap"><%= booking.post.title %></td>
              <td class="py-4 px-6 whitespace-nowrap"><%= human_enum_name('booking.statuses', booking.status) %></td>
              <td class="py-4 px-6 whitespace-nowrap text-center">
                <%= link_to 'Pokaż', booking, class: 'text-blue-600 hover:text-blue-900' %>
              </td>
              <td class="py-4 px-6 whitespace-nowrap text-center">
                <%= link_to 'Edytuj', edit_booking_path(booking), class: 'text-blue-600 hover:text-blue-900' %>
              </td>
              <td class="py-4 px-6 whitespace-nowrap text-center">
                <%= link_to 'Usuń', booking, data: { turbo_method: :delete, turbo_confirm: "Czy jesteś pewien?" }, class: 'text-red-600 hover:text-red-900' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= link_to 'Nowa Rezerwacja', new_booking_path, class: 'mt-4 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-black bg-yellow-300 hover:bg-yellow-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500' %>

    <%= turbo_stream_from 'bookings' %>
  </div>
</div>
